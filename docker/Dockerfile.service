# ============================================================
# Multi-stage Dockerfile for Agent Foundry Node.js services
# Usage:
#   docker build \
#     --build-arg SERVICE_DIR=services/api-gateway \
#     --build-arg PORT=3000 \
#     -f docker/Dockerfile.service .
# ============================================================

# ---------- Stage 1: Build ----------
FROM node:20-alpine AS builder

ARG SERVICE_DIR

WORKDIR /app

# Copy package manifests first for layer caching
COPY ${SERVICE_DIR}/package.json ${SERVICE_DIR}/package-lock.json* ./

RUN npm ci

# Copy the rest of the service source
COPY ${SERVICE_DIR}/ ./

# Also copy the shared tsconfig.base.json so "extends" resolves
COPY tsconfig.base.json /tsconfig.base.json

RUN npm run build

# ---------- Stage 2: Runtime ----------
FROM node:20-alpine AS runtime

ARG PORT=3000

WORKDIR /app

# Copy package manifests and install production-only dependencies
COPY --from=builder /app/package.json /app/package-lock.json* ./
RUN npm ci --omit=dev

# Copy compiled output from builder
COPY --from=builder /app/dist/ ./dist/

EXPOSE ${PORT}

CMD ["node", "dist/index.js"]
