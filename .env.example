# =============================================================================
# Agent Foundry â€” Root Environment Variables
# =============================================================================
# Copy this file to .env and fill in production values.
# These variables are consumed by docker-compose and shared across services.
# =============================================================================

# Database
DATABASE_URL=postgresql://agentfoundry:localdev@localhost:5432/agentfoundry_db
POSTGRES_USER=agentfoundry
POSTGRES_PASSWORD=localdev
POSTGRES_DB=agentfoundry_db

# RabbitMQ
RABBITMQ_URL=amqp://localhost:5672

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=dev-jwt-secret-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Service Ports
API_PORT=3000
USER_SERVICE_PORT=3001
COMPLIANCE_SERVICE_PORT=3002
REPORTING_SERVICE_PORT=3003
AI_SERVICE_PORT=3004
NOTIFICATION_SERVICE_PORT=3005

# AI Model
AI_MODEL_PATH=./models

# Environment
NODE_ENV=development
