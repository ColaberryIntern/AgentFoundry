# =============================================================================
# Agent Foundry â€” API Gateway Service
# =============================================================================
# Copy this file to .env before running the service.
# =============================================================================

# Server
API_PORT=3000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://agentfoundry:localdev@localhost:5432/agentfoundry_db

# RabbitMQ
RABBITMQ_URL=amqp://localhost:5672

# Redis (used for session cache and rate limiting)
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=dev-jwt-secret-change-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Upstream Service URLs
USER_SERVICE_URL=http://localhost:3001
COMPLIANCE_SERVICE_URL=http://localhost:3002
REPORTING_SERVICE_URL=http://localhost:3003
AI_SERVICE_URL=http://localhost:3004
NOTIFICATION_SERVICE_URL=http://localhost:3005

# CORS
CORS_ORIGIN=http://localhost:5173
