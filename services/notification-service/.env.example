# Server
NOTIFICATION_SERVICE_PORT=3005
NODE_ENV=development

# Database
DATABASE_URL=postgresql://agentfoundry:localdev@localhost:5432/agentfoundry_db

# RabbitMQ (notification event queue)
RABBITMQ_URL=amqp://localhost:5672
NOTIFICATION_QUEUE_NAME=notifications.send
NOTIFICATION_EXCHANGE_NAME=notifications.exchange

# Redis (online status and delivery tracking)
REDIS_URL=redis://localhost:6379

# WebSocket
WS_PORT=3006
WS_HEARTBEAT_INTERVAL=30000
