# Copy this file to .env before running the service.
# =============================================================================

# Server
USER_SERVICE_PORT=3001
NODE_ENV=development

# Database
DATABASE_URL=postgresql://agentfoundry:localdev@localhost:5432/agentfoundry_db

# JWT
JWT_SECRET=dev-jwt-secret-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# SMTP (email verification and password reset)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@agentfoundry.local

# Email Verification
EMAIL_VERIFICATION_URL=http://localhost:5173/verify-email
PASSWORD_RESET_URL=http://localhost:5173/reset-password
